<% layout("/layouts/boilerplate") %>

<h3>Edit Your Listing</h3>
<div class="row" mt-3>
  <div class="col-8 offset">
    <br />
    <form
      method="post"
      action="/listings/<%= lsiting._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%=lsiting.title  %>"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please enter valid title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label" class="form-control"
          >Description</label
        >
        <textarea name="listing[description]" class="form-control" required>
<%= lsiting.description %></textarea
        >
        <div class="invalid-feedback">Please enter description</div>
        <div class="valid-feedback">Description Looks good!</div>
      </div>

      <div class="mb-3">
        Original Image<br>
        <img src="<%= originalImageUrl%>">
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label" class="form-control"
            >Price</label
          >
          <input
            name="listing[price]"
            value="<%=lsiting.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label" class="form-control" required
            >Country</label
          >
          <input
            name="listing[country]"
            value="<%=lsiting.country %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid country</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label" class="form-control" required
          >Location</label
        >
        <input
          name="listing[location]"
          value="<%=lsiting.location  %>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter a valid location</div>
      </div>

      <button class="btn btn-dark mt-3" id="add-btn">Edit</button>
      <br />
      <br />
    </form>
  </div>
</div>
